---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
layout: "../layouts/BaseLayout.astro"
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Grim Gatherings - Contact</title>

    <link rel="icon" href="src/assets/favicon.png" type="image/x-icon" />

    <style>
      body {
        background-color: rgb(82, 81, 81);
        margin: 0;
        padding: 0;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
      }

      header, footer {
        margin: 0;
        padding: 0;
      }

      #contact-banner {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column; 
        height: 200px; 
        background-color: black;
        text-align: center; 
        padding: 20px;
      }

      h1 {
        color: #FF2200;
        font-family: 'Courier New', Courier, monospace;
        margin: 0;
      }

      h2 {
        color: #00f0ff;
        font-family: 'Courier New', Courier, monospace;
        margin: 10px 0 0;
      }

      #contact-stuff {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        padding: 20px;
        color: white;
        flex-wrap: wrap;
        background-color: #595959;
      }

      #contact-form, #socials-container {
        width: 48%; 
        text-align: center;
        margin: 10px 0;
      }

      h3 {
        color: #FF0BEF;
        margin-bottom: 15px;
      }

      form {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        background-color:black;
        border-radius: 8px;
      }

      label {
        display: block;
        margin: 10px 0 5px;
      }

      input, textarea {
        width: 90%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
      }

      button {
        padding: 10px 15px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      button:hover {
        background-color: #45a049;
      }

      #socials {
        display: flex;
        justify-content: center;
        gap: 15px;
      }

      #socials img {
        border-radius: 50%;
        transition: transform 0.3s ease;
      }

      #socials img:hover {
        transform: scale(1.2);
      }

        /* Media Queries */
      /* Tablet and smaller screens */
      @media (max-width: 768px) {
        #contact-stuff {
          flex-direction: column;
          align-items: center;
        }

        #contact-form, #socials-container {
          width: 80%; /* Increase form width for mobile */
        }
      }

      /* Mobile screens */
      @media (max-width: 600px) {
        h1 {
          font-size: 24px; /* Make the title smaller on mobile */
        }

        h2, h3 {
          font-size: 18px;
        }

        #contact-stuff {
          flex-direction: column;
          align-items: center;
        }

        #contact-form, #socials-container {
          width: 40%; /* Forms take up more space on mobile */
        }

        input, textarea {
          width: 50%; /* Make input fields fill the container */
        }

        #socials {
          flex-direction: column;
          gap: 10px; /* Stack social media icons vertically */
        }

        #socials img {
          width: 50px; /* Increase icon size on mobile */
          height: 50px;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <div id="contact-banner">
        <h1> Have A Question? Need Help? Just Plain Confused?...Too bad... </h1>
        <h3> Just kidding...hehe lol </h3>
    </div>
    <div id="contact-stuff">
      <!-- Contact Form -->
      <div id="contact-form">
        <h2> Contact Us! </h2>
        <form action="submit_form.php" method="POST">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required placeholder="Your full name">

          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required placeholder="Your email address">

          <label for="message">Message:</label>
          <textarea id="message" name="message" rows="4" required placeholder="Your message here"></textarea>

          <button type="submit">Submit</button>
        </form>
      </div>

      <div id="socials-container">
        <h2> Follow Us on Social Media! </h2>
        <div id="socials">
          <a href="https://www.facebook.com/login.php/" target="_blank">
            <img src="src/assets/facebook.png" alt="Facebook" width="40" height="40">
          </a>
          <a href="https://www.instagram.com/accounts/login/?hl=en" target="_blank">
            <img src="src/assets/instagram.png" alt="Instagram" width="40" height="40">
          </a>
          <a href="https://x.com/i/flow/login?lang=en" target="_blank">
            <img src="src/assets/twitter.png" alt="X" width="40" height="40">
          </a>
        </div>
      </div>
    </div>
    <Footer />
  </body>
</html>