---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
layout: "../layouts/BaseLayout.astro"
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Grim Gatherings - Home</title>
    <style>
      body {
        background-color: rgb(82, 81, 81);
        margin: 0;
        padding: 0;
      }

      #container {
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        color: white;
        margin: 0 auto;
        padding: 0;
        background-color: black;
        align-items: center;
      }

      #home-page {
        display: flex;
        gap: 2rem;
        align-items: center;
        padding: 2rem;
        width: 80%;
        max-width: 1200px;
        margin: 0 auto;
      }

      #home-image img {
        max-width: 300px;
        height: auto;
      }

      #home-text {
        max-width: 600px;
      }

      #home-text h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #FF2200;
      }

      #home-text h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: #FF0BEF;
      }

      #home-text p {
        font-size: 1rem;
        font-family: 'Courier New', Courier, monospace;
      }

      /* Book Now Button Styling */
      .book-now-btn {
        background-color: #FF2200;
        color: white;
        font-weight: bold;
        border: none;
        padding: 12px 24px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        border-radius: 5px;
        margin-top: 20px;
      }

      .book-now-btn:hover {
        background-color: #d71f00; /* Darker red on hover */
      }

      .book-now-btn:focus {
        outline: none;
      }

      @media (max-width: 768px) {
        #home-page {
          flex-direction: column;
          align-items: center;
          padding: 1rem; 
		}

        #home-image img {
          max-width: 80%;
        }

        #home-text {
          max-width: 100%;
          text-align: center;
        }

        #home-text h1 {
          font-size: 1.5rem;
        }

        #home-text h3 {
          font-size: 1.2rem;
        }

        #home-text p {
          font-size: 0.9rem; 
        }

        /* Ensure the button is centered on mobile */
        .book-now-btn {
          margin-top: 20px;
        }
      }

      /* Media Queries for extra small screens */
      @media (max-width: 480px) {
        #home-page {
          padding: 0.5rem; 
        }

        #home-text h1 {
          font-size: 1.2rem; 
        }

        #home-text h3 {
          font-size: 1rem;
        }

        #home-text p {
          font-size: 0.8rem;
        }
      }
    </style>
  </head>

  <body>
    <Header />

    <div id="container">
      <div><img src="src/assets/banner.png" alt="40% off banner" /></div>

      <div id="home-page">
        <div id="home-image">
          <img src="src/assets/nocturnoftheheart.png" alt="Nocturne of the Heart" />
        </div>
        <div id="home-text">
          <h1> Want To Do Something Cool for V-Day? </h1>
          <h3> Nocturne of the Heart: A Gothic Romance </h3>
          <p> Nocturne of the Heart is a gothic romantic dinner with candlelight, elegant food, and a mysterious atmosphereâ€”perfect for couples seeking a dark, unforgettable night.</p>
          <!-- Book Now button below the description -->
          <button class="book-now-btn">Book Now</button>
        </div>
      </div>
      <Footer />
    </div>
  </body>
</html>