---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
layout: "../layouts/BaseLayout.astro"
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Grim Gatherings - Ticketing</title>

	<link rel="icon" href="src/assets/favicon.png" type="image/x-icon" />

    <style>
	
        #container {
            display: flex;
            justify-content: space-between;
            background-color: black;
            color: white;
            padding: 20px;
        }

        #info {
            width: 45%;  /* Adjust the width as needed */
            padding: 20px;
        }

        #ticketing {
            width: 45%;  /* Adjust the width as needed */
            padding: 20px;
            background-color: #333333;
            border-radius: 8px;
        }

        h1 {
            font-size: 24px;
            text-align: center;
            margin-bottom: 20px;
        }

        h2 {
            color: #FF0BEF; /* Apply the purple color */
        }

        label {
            display: block;
            font-size: 16px;
            margin-bottom: 8px;
        }

        input, select, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .submit-btn {
            width: 100%;
            padding: 12px;
            background-color: #333;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }

        .submit-btn:hover {
            background-color: #555;
        }

        .dropdown {
            margin-top: 20px;
        }

        select {
            background-color: rgb(52, 52, 52);
            color: white;
            font-weight: bold;
            padding: 10px;
            border-radius: 5px;
            border: none;
            cursor: pointer;
        }

        select:hover {
            background-color: rgb(195, 195, 195);
        }

        /* Responsive Design for smaller screens */
        @media (max-width: 768px) {
            #container {
                flex-direction: column;
                align-items: center;
                gap: 20px;
            }

            #info, #ticketing {
                width: 100%; /* Full width on small screens */
            }
        }

    </style>
  </head>

  <body>
    <Header />
    <div id="container">
        <div id="info"> 
            <h1>Choose Your Event</h1>
            <p>Select an event below to book your tickets:</p>

            <div class="dropdown">
                <label for="events">Choose an Event: </label>
                <select id="events" onchange="window.location.href=this.value">
                    <option value="">Select an Event</option>
                    <option value="/midnight-at-the-blackened-spoon">Nocturne of the Heart: A Gothic Romance</option>
                    <option value="/midnight-at-the-blackened-spoon">Midnight at The Blackened Spoon</option>
                    <option value="/spectral-cinema">Spectral Cinema: Horror Movie Marathon</option>
                    <option value="/clay-crypts">Clay & Crypts: A Gothic Pottery Party</option>
                </select>
            </div>
            <img src="src/assets/t-midnight.png" alt="Midnight at The Blackened Spoon img"/>
            <h2>Midnight at The Blackened Spoon</h2>
            <p>Midnight at The Blackened Spoon is a gothic diner experience with dark vibes, eerie tunes, and unique dishes. Itâ€™s the perfect place to connect with fellow goths and metal-heads, enjoy haunting food, and embrace the night.</p>
            <p>Location: 222 Yellowbrick Rd, Fake, OH, 98765</p>
        </div>

        <div id="ticketing">
            <!-- Ticketing Form -->
            <h1>Book Your Tickets</h1>
            <form action="/submit-ticket" method="POST">
                <!-- Name Field -->
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" required placeholder="Your full name">

                <!-- Email Field -->
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" required placeholder="Your email address">

                <!-- Event Selection (Already selected) -->
                <label for="event">Event</label>
                <input type="text" id="event" name="event" value="Midnight at The Blackened Spoon" readonly>

                <!-- Date Selection -->
                <label for="event-date">Event Date</label>
                <input type="date" id="event-date" name="event_date" required>

                <!-- Ticket Quantity -->
                <label for="ticket-quantity">Number of Tickets</label>
                <input type="number" id="ticket-quantity" name="ticket_quantity" min="1" required>

                <!-- Special Requests -->
                <label for="special-requests">Special Requests (Optional)</label>
                <textarea id="special-requests" name="special_requests" rows="4" placeholder="Any special requests or notes?"></textarea>

                <!-- Promo Code Field -->
                <label for="promo-code">Promo Code (Optional)</label>
                <input type="text" id="promo-code" name="promo_code" placeholder="Enter promo code">

                <!-- Submit Button -->
                <button type="submit" class="submit-btn">Submit Ticket Order</button>
            </form>
        </div>
    </div>

    <Footer />
  </body>
</html>                    